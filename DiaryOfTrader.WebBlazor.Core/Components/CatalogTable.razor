@typeparam TItem 

@if (Entities != null && Entities.Any())
{
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Наименование</th>
            <th scope="col">Описание</th>
            <th scope="col" style="width:20px">Update</th>
            <th scope="col" style="width:20px">Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entity in Entities)
        {
            <tr  @onclick="() => Select(entity)">
                <td class="align-middle">
                    @entity.Name
                </td>
                <td class="align-middle">
                    @entity.Description
                </td>
                <td class="align-middle">
                    <a class="btn btn-info" @onclick="() => RedirectToEditPage(entity.ID)">
                        Edit
                    </a>
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <span>
        Загрузка...
    </span>
}