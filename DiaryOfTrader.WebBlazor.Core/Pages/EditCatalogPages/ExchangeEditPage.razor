@page "/EditExchange/{Id:long}"
<h3>ExchangeEditPage</h3>

@if (_exchange != null)
{
    <EditForm EditContext ="_editContext" OnValidSubmit="Update" class="card card-body bg-light mt-5">
        <DataAnnotationsValidator />
	
        <div class="mb-3 row">
            <label for="name" class="col-md-2 col-form-label">Name:</label>
            <div class="col-md-10">
                <InputText id="code" class="form-control" @bind-Value="_exchange.Name" />
                <ValidationMessage For="@(() => _exchange.Name)" />
            </div>
        </div>
        <div class="mb-3 row">
            <label for="caption" class="col-md-2 col-form-label">Description:</label>
            <div class="col-md-10">
                <InputTextArea id="caption" class="form-control"  @bind-Value="_exchange.Description" />
                <ValidationMessage For="@(() => _exchange.Description)" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success float-end" 
                        disabled="@_formInvalid">Update</button>
            </div>
        </div>
    </EditForm>
    <br />
    <div class="row">
        <div class="col">
            <a href="/exchanges" class="btn btn-success">Back</a>
        </div>
    </div>
}