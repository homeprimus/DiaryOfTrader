<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

<EditForm Model="_userForRegistration" OnValidSubmit="Register" class="mx-1 mx-md-4">
    <DataAnnotationsValidator/>
    <div class="d-flex flex-row align-items-center mb-4 align-content-center" style="width: 25%; margin: auto">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <InputText type="email" id="email" class="form-control" placeholder="Your Email"
                       @bind-Value="_userForRegistration.Email"/>
                      @* <label class="form-label" for="email">Your Email</label> *@
            <ValidationMessage For="@(() => _userForRegistration.Email)"/>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4 align-content-center" style="width: 25%; margin: auto">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <InputText type="password" id="password" class="form-control" placeholder="Password"
                   @bind-Value="_userForRegistration.Password"/>
            <ValidationMessage For="@(() => _userForRegistration.Password)"/>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4 align-content-center" style="width: 25%; margin: auto">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <InputText type="password" id="passwordConfirm" class="form-control" placeholder="Repeat your password"
                   @bind-Value="_userForRegistration.ConfirmPassword" />
            <ValidationMessage For="@(() => _userForRegistration.ConfirmPassword)"/>
        </div>
    </div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
    </div>

</EditForm>